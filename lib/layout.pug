
include components.pug

doctype html

| !{'\n\n<!--\n' + license + '\n-->\n\n'}

html(lang = 'vi')
  head
    meta(charset = 'utf-8')
    title: block title
      | Trò chơi giải trí

    block stylesheet
      +style('style/basic.css')
      +style('style/scrollbar.css')
      +style('style/master.css')

